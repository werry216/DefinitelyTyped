{
    "extends": "dtslint/dt.json",
    "rules": {
        "ban-types": true,                     // PRODUCES ERRORS WHEN REMOVED
        "callable-types": false,               // HAS ISSUES
        "comment-format": true,                // PRODUCES ERRORS WHEN REMOVED
        "dt-header": false,                    // HAS ISSUES
        "max-line-length": false,              // HAS ISSUES
        "no-consecutive-blank-lines": false,   // HAS ISSUES
        "no-unnecessary-generics": false,      // HAS ISSUES
        "no-var-keyword": false,               // HAS ISSUES
        "no-void-expression": false,           // HAS ISSUES
        "object-literal-key-quotes": false,    // HAS ISSUES
        "object-literal-shorthand": false,     // HAS ISSUES
        "only-arrow-functions": false,         // HAS ISSUES
        "unified-signatures": false            // HAS ISSUES
    }
}
