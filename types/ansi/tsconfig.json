{
    "files": [
        "ansi.d.ts",
        "ansi-tests.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "../",
        "typeRoots": [
            "../"
        ],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node"]
    }
}